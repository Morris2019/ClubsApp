<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:id="@+id/ClubSignUpSnack"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
      <ScrollView 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true" >
          <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">


				<Refractored.Controls.CircleImageView
					android:id="@+id/UserProfile"
					android:layout_width="118dp"
					android:layout_height="106dp"
					android:layout_gravity="center"
					android:layout_alignParentTop="true"
					android:layout_centerInParent="true"
					app:civ_border_width="3dp"
					app:civ_border_color="@color/colorLightDark"
					android:src="@drawable/outline_add_a_photo_white_24dp" />
				

				<android.support.design.widget.TextInputLayout
					android:id="@+id/clubmefirstname"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					app:hintEnabled="true"
					android:textColorHint="@color/colorLightDark"
					app:hintTextAppearance="@style/TextAppearance.AppCompat.Body2">

					<EditText
						android:hint="@string/memberfirstname"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:maxLength="20"
						android:textColor="@color/colorLightDark"
						android:inputType="textPersonName"/>
				</android.support.design.widget.TextInputLayout>

				<android.support.design.widget.TextInputLayout
					android:id="@+id/Memberlast_name"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textColorHint="@color/colorLightDark"
					app:hintAnimationEnabled="true"
					app:hintEnabled="true">

					<EditText
						android:hint="@string/memberlastname"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:maxLength="20"
						android:textColor="@color/colorLightDark"
						android:inputType="textPersonName" />
				</android.support.design.widget.TextInputLayout>

				<android.support.design.widget.TextInputLayout
					android:id="@+id/ClubmemUserName"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textColorHint="@color/colorLightDark"
					app:hintAnimationEnabled="true"
					app:hintEnabled="true">

					<EditText
						android:hint="@string/memberUsername"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:maxLength="15"
						android:textColor="@color/colorLightDark"
						android:inputType="text"/>
				</android.support.design.widget.TextInputLayout>

			<android.support.design.widget.TextInputLayout
					android:id="@+id/MemberEmail"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textColorHint="@color/colorLightDark"
					app:hintAnimationEnabled="true"
					app:hintEnabled="true">

					<EditText
						android:hint="@string/MemberEmail"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:textColor="@color/colorLightDark"
						android:maxLength="20"
                        android:inputType="textEmailAddress"/>

				</android.support.design.widget.TextInputLayout>

				<android.support.design.widget.TextInputLayout
					android:id="@+id/clubmemphone"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textColorHint="@color/colorLightDark"
					app:hintAnimationEnabled="true"
					app:hintEnabled="true">

					<EditText
						android:hint="@string/memberUsernPhone"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:maxLength="10"
						android:textColor="@color/colorLightDark"
						android:inputType="phone"/>
				</android.support.design.widget.TextInputLayout>


				<fr.ganfra.materialspinner.MaterialSpinner
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/MemberFaculty"
					app:ms_hint="Faculty"
					app:ms_hintColor="@color/colorLightDark"
					app:ms_floatingLabelText="Faculty"
					app:ms_floatingLabelColor="@color/colorLightDark"
					app:ms_alignLabels="true"
					app:ms_arrowColor="@color/accent" />

				<fr.ganfra.materialspinner.MaterialSpinner
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/MemberAssociation"
					app:ms_hint="Association"
					app:ms_hintColor="@color/colorLightDark"
					app:ms_floatingLabelText="Association"
					app:ms_floatingLabelColor="@color/colorLightDark"
					app:ms_alignLabels="true"
					app:ms_arrowColor="@color/accent"  />

			    <fr.ganfra.materialspinner.MaterialSpinner
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/MemberPosition"
					app:ms_hint="Position"
					app:ms_hintColor="@color/colorLightDark"
					app:ms_floatingLabelText="Position"
					app:ms_floatingLabelColor="@color/colorLightDark"
					app:ms_alignLabels="true"
					app:ms_arrowColor="@color/accent"  />

			<android.support.design.widget.TextInputLayout
					android:id="@+id/MemberPasscode"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textColorHint="@color/colorLightDark"
					app:hintAnimationEnabled="true"
					app:hintEnabled="true">

					<EditText
						android:hint="@string/MemberPasscode"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:textColor="@color/colorLightDark"
						android:maxLength="20"
						android:inputType="textPassword"/>

				</android.support.design.widget.TextInputLayout>
			<ProgressBar
				android:id="@+id/MemberProgress"
				android:visibility="invisible"
				android:layout_centerInParent="true"
				android:theme="@style/CircularProgres"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
		        style="@style/Widget.AppCompat.ProgressBar" />
			
			<Button
				android:id="@+id/MemberSignUp"
				android:layout_width="match_parent"
				android:layout_height="40dp"
				android:fadingEdge="horizontal|vertical"
				android:foregroundGravity="center_vertical"   
				android:layout_alignParentBottom="true"
				android:requiresFadingEdge="horizontal|vertical"
				android:layout_gravity="bottom"
			    android:layout_marginTop="15dp"
				android:background="@color/colorLightDark"
				android:textColor="#ffffff"
				android:text="@string/MemberRegister"
				android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

   </LinearLayout>
</ScrollView>
</RelativeLayout>
