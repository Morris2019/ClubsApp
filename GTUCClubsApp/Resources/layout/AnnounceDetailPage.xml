<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AnnouncePage"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <android.support.v7.widget.CardView
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    android:id="@+id/AnnounceDetail"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="@android:color/background_light">
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/AnnouncementImage"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:contentDescription="@string/cardPostImages"
                android:layout_margin="2dp" />

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

     <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/colorLightDark"
                    android:text="Caption"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textSize="16sp"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax" />
        <TextView
                    android:id="@+id/AnnouncementTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/colorLightDark"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textSize="16sp"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax" />

            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/colorLightDark"
                    android:text="Activities:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textSize="16sp"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax" />
        <TextView
                    android:id="@+id/AnnouncementDiscrip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/colorLightDark"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textSize="16sp"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/colorLightDark"
                    android:text="Venue:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textSize="16sp"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax" />
        <TextView
                    android:id="@+id/AnnouncementVenue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/colorLightDark"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textSize="16sp"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax" />
              </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/colorLightDark"
                    android:text="Event Date:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textSize="16sp"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax" />
        <TextView
                    android:id="@+id/AnnouncementDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/colorLightDark"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textSize="16sp"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax" />
              </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/colorLightDark"
                    android:text="Faculty:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textSize="16sp"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax" />
            <TextView
                    android:id="@+id/AnnouncementFaculty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/colorLightDark"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textSize="16sp"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax" />
              </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/colorLightDark"
                    android:text="Association:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textSize="16sp"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax" />
        <TextView
                    android:id="@+id/AnnouncementAssociation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/colorLightDark"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textSize="16sp"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax" />
              </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

           
            <TextView
                    android:id="@+id/AnnouncementDatePosted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/colorLightDark"
                    android:text="Date Posted"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textSize="16sp"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax" />
              </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                        android:id="@+id/MemberComment"
                        android:hint="@string/Comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:maxLines="3"
                        android:paddingStart="32dp"
                        android:paddingRight="20dp"
                        android:textColor="@color/colorLightDark"
                        android:layout_alignParentBottom="true"
                        android:inputType="textMultiLine|textImeMultiLine"
                        android:layout_centerVertical="true" />

			 <TextView
                    android:id="@+id/MemberCommentText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textStyle="normal"
                    android:clickable="true"
                    android:textColor="@color/colorLightDark"
                    android:text="POST"
                    android:layout_alignParentEnd="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textSize="14sp"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax" />

                          
         </LinearLayout>
            </LinearLayout>

</android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
                android:id="@+id/AnnouncementComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

     <android.support.design.widget.FloatingActionButton
            android:id="@id/nav_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            android:background="@color/colorAccent"
            android:src="@drawable/baseline_add_alert_black_18dp"/>


        </LinearLayout>

     </ScrollView>
  </android.support.design.widget.CoordinatorLayout>